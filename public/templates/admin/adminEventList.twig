<form action='/index.php?page=admin' method='post'>
    <h1 class='text-3xl font-bold underline'>Administrator Bereich</h1>
    <br>
    <div class='adminevent'>
        <h2 class='text-2xl font-bold underline'>Termine:</h2>
        <p class='font-bold'>Eingetragene Termine:</p>

        <table align='center'>
            {% for event in events %}
                <!-- when click on button "ändern" //-->
                {% if modifypick == event.id %}
                    <tr>
                        <td><input name='newdate' value='{{ event.eventdate }}'></td>
                        <td>
                            <button name='modifyEvent' value='{{ event.id }}'>aktualisieren</button>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td>{{ event.eventdate }}</td>
                        <td>
                            <button name='modifypick' value='{{ event.id }}'>ändern</button>
                        </td>
                        <td>
                            <button name='deleteEvent' value='{{ event.id }}'>löschen</button>
                        </td>
                    </tr>
                {% endif %}
            {% endfor %}
        </table>
        <br>

        <p class='font-bold'>Neuer Termin erstellen:</p>
        <table align='center'>
            <tr>
                {{ selectDate | raw }}
                <td><input type='submit' name='createEvent' value='erstellen'></td>
            </tr>
        </table>
    </div>
</form>
<br>

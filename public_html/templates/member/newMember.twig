{% if isAdmin %}
    <br>
    <p><button id='idNewMemberButton' class='classSubmit'><b>Neues Mitglied</b></button></p>
    <div id="idshowNewMemberForm">
    <img src='img/close.png' id='closeNewMember'></img>
    {% if isAdmin %}
        <br>
        <form action='/index.php?page=memberlist' method='post'>
        <h1 class='text-3xl font-bold text-center'>Neues Mitglied</h1>
        <br>
        <p>
        Name: <input name='membername' required="required"><br>
        E-Mail: <input type="email" name='e_mail' required="required"><br>

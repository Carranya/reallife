<form action='/index.php?page=adminEvents' method='post'>
<h2 class='text-2xl font-bold underline'>Termine / Schichtplan:</h2>
<br>

{% if isShowAllEvent %}
    <p><input type='checkbox' name='showAllEvent' style="display:none">
